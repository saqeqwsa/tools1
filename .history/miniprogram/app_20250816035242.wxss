/**app.wxss**/
@import "styles/responsive.wxss";

/* 全局基础样式 */
page {
  background: #f9fafb;
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  line-height: 1.5;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 通用容器 */
.container {
  width: 100%;
  min-height: 100vh;
  box-sizing: border-box;
  position: relative;
}

/* 响应式容器 */
.responsive-container {
  width: 100%;
  padding: 0 6vw;
  box-sizing: border-box;
}

/* 按钮重置 */
button {
  background: initial;
  border: none;
  padding: 0;
  font-family: inherit;
  outline: none;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

/* 全局flex布局 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-row {
  flex-direction: row;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
  align-items: center;
}

.flex-wrap {
  flex-wrap: wrap;
}

.flex-1 {
  flex: 1;
}

/* 响应式间距 */
.section {
  margin-bottom: 6vw;
  padding: 0 6vw;
}

@media (max-width: 375px) {
  .section {
    margin-bottom: 32rpx;
    padding: 0 32rpx;
  }
}

@media (min-width: 376px) and (max-width: 414px) {
  .section {
    margin-bottom: 48rpx;
    padding: 0 48rpx;
  }
}

@media (min-width: 415px) {
  .section {
    margin-bottom: 56rpx;
    padding: 0 56rpx;
  }
}

/* 全局卡片样式 */
.card {
  background: white;
  border-radius: 4vw;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

@media (max-width: 375px) {
  .card {
    border-radius: 24rpx;
  }
}

@media (min-width: 376px) and (max-width: 414px) {
  .card {
    border-radius: 32rpx;
  }
}

@media (min-width: 415px) {
  .card {
    border-radius: 36rpx;
  }
}

.card:active {
  transform: scale(0.98);
}

/* 安全区域适配 */
.safe-area-top {
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}

.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 文本省略 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-ellipsis-2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 响应式字体大小 */
.text-xl {
  font-size: 8vw;
  font-weight: 700;
}

.text-lg {
  font-size: 5vw;
  font-weight: 600;
}

.text-md {
  font-size: 4vw;
  font-weight: 500;
}

.text-sm {
  font-size: 3vw;
  font-weight: 400;
}

.text-xs {
  font-size: 2.5vw;
  font-weight: 400;
}

@media (max-width: 375px) {
  .text-xl { font-size: 44rpx; }
  .text-lg { font-size: 36rpx; }
  .text-md { font-size: 28rpx; }
  .text-sm { font-size: 24rpx; }
  .text-xs { font-size: 20rpx; }
}

@media (min-width: 376px) and (max-width: 414px) {
  .text-xl { font-size: 48rpx; }
  .text-lg { font-size: 38rpx; }
  .text-md { font-size: 30rpx; }
  .text-sm { font-size: 26rpx; }
  .text-xs { font-size: 22rpx; }
}

@media (min-width: 415px) {
  .text-xl { font-size: 52rpx; }
  .text-lg { font-size: 42rpx; }
  .text-md { font-size: 32rpx; }
  .text-sm { font-size: 28rpx; }
  .text-xs { font-size: 24rpx; }
}