/* tools.wxss */
.container {
  background-color: #f9fafb;
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  width: 100%;
}

/* 顶部区域 */
.header-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 6vw 6vw 8vw 6vw;
}

@media (max-width: 375px) {
  .header-section {
    padding: 32rpx 32rpx 48rpx 32rpx;
  }
}

@media (min-width: 376px) and (max-width: 414px) {
  .header-section {
    padding: 48rpx 48rpx 64rpx 48rpx;
  }
}

@media (min-width: 415px) {
  .header-section {
    padding: 56rpx 56rpx 72rpx 56rpx;
  }
}

.header-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.main-title {
  font-size: 8vw;
  font-weight: 700;
}

@media (max-width: 375px) {
  .main-title { font-size: 44rpx; }
}

@media (min-width: 376px) and (max-width: 414px) {
  .main-title { font-size: 48rpx; }
}

@media (min-width: 415px) {
  .main-title { font-size: 52rpx; }
}

.notification-icon {
  width: 42rpx;
  height: 42rpx;
}

.search-container {
  position: relative;
  width: 100%;
}

.search-input {
  width: 100%;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 48rpx;
  padding: 48rpx 72rpx 48rpx 32rpx; /* 上下padding翻倍：48rpx，左32rpx，右72rpx */
  color: white;
  font-size: 28rpx;
  box-sizing: border-box;
}

.search-input::placeholder {
  color: rgba(255, 255, 255, 0.7);
}

.search-icon {
  position: absolute;
  right: 32rpx; /* 距离右边32rpx，与左边距保持一致 */
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
  pointer-events: none; /* 防止图标阻挡点击 */
  opacity: 0.8;
}

/* 响应式搜索框样式 */
@media (max-width: 375px) {
  .search-input {
    padding: 40rpx 64rpx 40rpx 28rpx; /* 小屏适配，上下padding翻倍：40rpx */
    font-size: 26rpx;
  }
  
  .search-icon {
    right: 28rpx;
    width: 28rpx;
    height: 28rpx;
  }
}

@media (min-width: 376px) and (max-width: 414px) {
  .search-input {
    padding: 48rpx 72rpx 48rpx 32rpx; /* 中屏标准，上下padding翻倍：48rpx */
    font-size: 28rpx;
  }
  
  .search-icon {
    right: 32rpx;
    width: 32rpx;
    height: 32rpx;
  }
}

@media (min-width: 415px) {
  .search-input {
    padding: 26rpx 76rpx 26rpx 36rpx; /* 大屏优化 */
    font-size: 30rpx;
  }
  
  .search-icon {
    right: 36rpx;
    width: 34rpx;
    height: 34rpx;
  }
}

/* 快速分类 */
.category-section {
  padding: 0 6vw;
  margin-top: -4vw;
  margin-bottom: 6vw;
}

@media (max-width: 375px) {
  .category-section {
    padding: 0 32rpx;
    margin-top: -24rpx;
    margin-bottom: 32rpx;
  }
}

@media (min-width: 376px) and (max-width: 414px) {
  .category-section {
    padding: 0 48rpx;
    margin-top: -32rpx;
    margin-bottom: 48rpx;
  }
}

@media (min-width: 415px) {
  .category-section {
    padding: 0 56rpx;
    margin-top: -40rpx;
    margin-bottom: 56rpx;
  }
}

.category-card {
  background: white;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.1);
}

/* 原有的网格布局（保留作为备用） */
.category-grid {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 3vw;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: calc(25% - 2.25vw);
  min-width: 120rpx;
}

/* 新的一行显示布局 */
.category-grid-inline {
  display: flex;
  justify-content: space-between;
  align-items: stretch;
  width: 100%;
  gap: 0;
}

.category-item-inline {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 0 8rpx;
  box-sizing: border-box;
  min-height: 160rpx;
  justify-content: center;
}

/* 确保在所有屏幕尺寸下都保持一行显示 */
@media (max-width: 375px) {
  .category-item-inline {
    padding: 0 4rpx;
    min-height: 140rpx;
  }
}

@media (min-width: 376px) and (max-width: 414px) {
  .category-item-inline {
    padding: 0 6rpx;
    min-height: 150rpx;
  }
}

@media (min-width: 415px) {
  .category-item-inline {
    padding: 0 10rpx;
    min-height: 170rpx;
  }
}

/* 横屏时保持一行显示，但调整高度 */
@media (orientation: landscape) {
  .category-item-inline {
    min-height: 120rpx;
    padding: 0 6rpx;
  }
}

.category-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 16rpx auto;
}

/* 一行显示时的图标大小调整 */
.category-item-inline .category-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  margin: 0 auto;
  flex-shrink: 0;
}

@media (max-width: 375px) {
  .category-item-inline .category-icon {
    width: 68rpx;
    height: 68rpx;
    border-radius: 16rpx;
  }
}

@media (min-width: 415px) {
  .category-item-inline .category-icon {
    width: 88rpx;
    height: 88rpx;
    border-radius: 22rpx;
  }
}

.icon-text {
  font-size: 36rpx;
  line-height: 1;
  font-weight: normal;
}

/* 一行显示时的图标文字大小调整 */
.category-item-inline .icon-text {
  font-size: 30rpx;
}

@media (max-width: 375px) {
  .category-item-inline .icon-text {
    font-size: 26rpx;
  }
}

@media (min-width: 415px) {
  .category-item-inline .icon-text {
    font-size: 32rpx;
  }
}

.category-name {
  font-size: 24rpx;
  color: #666;
  margin-top: 16rpx;
  text-align: center;
  word-wrap: break-word;
  word-break: break-all;
  line-height: 1.2;
  width: 100%;
}

/* 一行显示时的category-name样式优化 */
.category-item-inline .category-name {
  font-size: 22rpx;
  margin-top: 12rpx;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

@media (max-width: 375px) {
  .category-item-inline .category-name {
    font-size: 20rpx;
    margin-top: 8rpx;
  }
}

@media (min-width: 415px) {
  .category-item-inline .category-name {
    font-size: 24rpx;
    margin-top: 14rpx;
  }
}

/* 通用section */
.section {
  padding: 0 6vw;
  margin-bottom: 6vw;
}

@media (max-width: 375px) {
  .section {
    padding: 0 32rpx;
    margin-bottom: 32rpx;
  }
}

@media (min-width: 376px) and (max-width: 414px) {
  .section {
    padding: 0 48rpx;
    margin-bottom: 48rpx;
  }
}

@media (min-width: 415px) {
  .section {
    padding: 0 56rpx;
    margin-bottom: 56rpx;
  }
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
}

/* 工具列表 */
.tool-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.tool-item {
  background: white;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.tool-item:active {
  transform: scale(0.98);
}

.tool-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tool-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  margin-right: 24rpx;
}

.tool-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.tool-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.tool-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.tool-meta {
  display: flex;
  align-items: center;
}

.tool-tag {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 16rpx;
}

.tool-rating {
  font-size: 24rpx;
  color: #999;
}

.arrow-icon {
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
}

/* 技能网格 */
.skill-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 3vw;
}

.skill-item {
  background: white;
  border-radius: 32rpx;
  padding: 32rpx;
  text-align: center;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  width: calc(50% - 1.5vw);
  flex-shrink: 0;
}

@media (max-width: 375px) {
  .skill-item {
    width: calc(50% - 8rpx);
  }
}

@media (min-width: 376px) and (max-width: 414px) {
  .skill-item {
    width: calc(50% - 10rpx);
  }
}

@media (min-width: 415px) {
  .skill-item {
    width: calc(50% - 12rpx);
  }
}

/* 横屏时变成3列 */
@media (orientation: landscape) {
  .skill-item {
    width: calc(33.333% - 2vw);
  }
}

.skill-item:active {
  transform: scale(0.98);
}

.skill-icon {
  width: 128rpx;
  height: 128rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 24rpx auto;
}

.skill-icon-text {
  font-size: 48rpx;
  line-height: 1;
  color: white;
}

.skill-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.skill-desc {
  display: block;
  font-size: 24rpx;
  color: #6B7280;
}

