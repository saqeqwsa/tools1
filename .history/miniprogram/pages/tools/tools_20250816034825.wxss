}

.time-icon {
  width: 128rpx;
  height: 128rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 24rpx auto;
}

.time-icon-text {
  font-size: 48rpx;
  line-height: 1;
  color: white;
}

.time-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.time-desc {
  display: block;
  font-size: 24rpx;
  color: #6B7280;
}
