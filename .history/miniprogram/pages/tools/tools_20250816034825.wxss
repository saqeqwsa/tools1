/* tools.wxss */
.container {
  background-color: #f9fafb;
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  width: 100%;
}

/* 顶部区域 */
.header-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 6vw 6vw 8vw 6vw;
}

@media (max-width: 375px) {
  .header-section {
    padding: 32rpx 32rpx 48rpx 32rpx;
  }
}

@media (min-width: 376px) and (max-width: 414px) {
  .header-section {
    padding: 48rpx 48rpx 64rpx 48rpx;
  }
}

@media (min-width: 415px) {
  .header-section {
    padding: 56rpx 56rpx 72rpx 56rpx;
  }
}

.header-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.main-title {
  font-size: 8vw;
  font-weight: 700;
}

@media (max-width: 375px) {
  .main-title { font-size: 44rpx; }
}

@media (min-width: 376px) and (max-width: 414px) {
  .main-title { font-size: 48rpx; }
}

@media (min-width: 415px) {
  .main-title { font-size: 52rpx; }
}

.notification-icon {
  width: 42rpx;
  height: 42rpx;
}

.search-container {
  position: relative;
  width: 100%;
}

.search-input {
  width: 100%;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 48rpx;
  padding: 24rpx 32rpx;
  color: white;
  font-size: 28rpx;
}

.search-input::placeholder {
  color: rgba(255, 255, 255, 0.7);
}

.search-icon {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
}

/* 快速分类 */
.category-section {
  padding: 0 48rpx;
  margin-top: -32rpx;
  margin-bottom: 48rpx;
}

.category-card {
  background: white;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.1);
}

.category-grid {
  display: flex;
  justify-content: space-between;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.category-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 16rpx auto;
}

.icon-text {
  font-size: 36rpx;
  line-height: 1;
  font-weight: normal;
}

.category-name {
  font-size: 24rpx;
  color: #666;
}

/* 通用section */
.section {
  padding: 0 48rpx;
  margin-bottom: 48rpx;
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
}

/* 工具列表 */
.tool-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.tool-item {
  background: white;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.tool-item:active {
  transform: scale(0.98);
}

.tool-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tool-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  margin-right: 24rpx;
}

.tool-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.tool-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.tool-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.tool-meta {
  display: flex;
  align-items: center;
}

.tool-tag {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 16rpx;
}

.tool-rating {
  font-size: 24rpx;
  color: #999;
}

.arrow-icon {
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
}

/* 技能网格 */
.skill-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.skill-item {
  background: white;
  border-radius: 32rpx;
  padding: 32rpx;
  text-align: center;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  width: 48%;
  margin-bottom: 24rpx;
}

.skill-item:active {
  transform: scale(0.98);
}

.skill-icon {
  width: 128rpx;
  height: 128rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 24rpx auto;
}

.skill-icon-text {
  font-size: 48rpx;
  line-height: 1;
  color: white;
}

.skill-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.skill-desc {
  display: block;
  font-size: 24rpx;
  color: #6B7280;
}

/* 项目卡片 */
.project-card {
  background: white;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.1);
}

.project-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.project-info {
  flex: 1;
}

.project-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.project-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.project-action {
  background: #3B82F6;
  color: white;
  padding: 16rpx 32rpx;
  border-radius: 24rpx;
}

.action-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 时间工具网格 */
.time-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.time-item {
  background: white;
  border-radius: 32rpx;
  padding: 32rpx;
